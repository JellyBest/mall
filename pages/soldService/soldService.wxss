/* pages/soldService/soldService.wxss */
page{
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.form{
  font-size: 24rpx;
  color: #333;
}
.cell{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.area textarea{
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
  height: 150rpx;
  border: 2rpx solid #ccc;
}
.upload{
  width: 20rpx;
  height: 18rpx; 
  margin-right: 6rpx;
}
.upload-btn{
  width: 124rpx;
	height: 32rpx;
  font-size: 20rpx;
  margin: 20rpx 0;
	border: solid 1rpx #cccccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.imgs{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.img-item{
  width: 200rpx;
  height: 200rpx;
  margin-right: 6rpx;
  border: 2rpx solid #ccc;
}
.back{
  display: flex;
}
.back .label{
  margin-right: 20rpx;
}
.radio-class{
  display: flex;
}
.radio-left{
  margin-right: 20rpx;
}