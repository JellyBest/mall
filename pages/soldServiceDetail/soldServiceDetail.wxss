page{
  background-color: #f5f5f5;
}
.top{
  width: 100%;
  height: 120rpx;
  background-color: #89c02e;
}
.order{
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  padding: 0 25rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.pay{
  font-size: 32rpx;
}
.order-desc{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.time-item{
  color: red;
}
.ads{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  min-height: 90rpx;
}
.ads-name{
  color: #333;
}
.address{
  color: #bbb;
}
.item{
  margin-bottom: 26rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #dfdfdf;
}
.order-box{
  margin-top: 14rpx;
}
.status{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #ccc;
}
.desc{
  color: #dd666a;
}
.status .left{
  display: flex;
  align-items: center;
}
.left .date{
  font-size: 20rpx;
  margin-left: 30rpx;
}
.good{
  width: 144rpx;
  height: 136rpx;
}
.list{
  padding: 0 20rpx;
  height: 160rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: #090909;
}
.list .left{
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  justify-content: center;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.good-num{
  font-size: 26rpx;
  color: #626262;
}
.name{
  font-size: 30rpx;
  color: #494949;
  margin-bottom: 30rpx;
}
.item-btm{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.weight{
  margin-right: 15rpx;
}
.btn-box{
  display: flex;
  justify-content: flex-end;
  background-color: #fff;
  box-sizing: border-box;
  padding: 26rpx 40rpx 26rpx 0;
}
.btn-box .button-left, .btn-box .button-right{
  padding: 0;
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
  color: #c5c5c5;
  margin-left: 40rpx;
}
.btn-box .button-right{
  color: #fff;
  background-color: #89c02e;
}
.total{
  padding: 0 40rpx 20rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: #090909;
}
.color-34{
  color: #343434;
}
.red{
  color: #ee4928;
}
.mr-10{
  margin-right: 10rpx;
}
.status-icon{
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.order-desc-btm{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.middle{
  margin-top: 26rpx;
  background-color:#fff;
}
.mid-cell{
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dfdfdf; 
  font-size: 30rpx;
  color: #676767;
}
.receive-name{
  text-align: right;
  color: #363636;
  font-size: 30rpx;
}
.receive-ads{
  font-size: 24rpx;
  color: #989898;
}

.cells{
  margin-bottom: 26rpx;
  background-color: #fff;
}
.cell{
  padding: 0 20rpx;

  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #313131;
}

.label{
  width: 220rpx;
}
.label{
  font-size: 26rpx;
  color: #313131;
  padding: 0 20rpx;
  line-height: 80rpx;
}
.refund-pic{
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  margin: 20rpx;
}