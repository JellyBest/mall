<!--pages/newAddress/newAddress.wxml-->
<view class="cell">
  <view class="label">收货人</view>
  <view>
    <input placeholder="请填写收货人"> </input>
  </view>
</view>
<view class="cell">
  <view class="label">手机号码</view>
  <view>
    <input placeholder="请填写手机号码"> </input>
  </view>
</view>
<view class="cell">
  <view class="label">收货地址</view>
  <view>
    <input placeholder="请填写小区/写字楼等地址"> </input>
  </view>
</view>
<view class="cell">
  <view class="label">门牌号</view>
  <view>
    <input placeholder="例如8栋3单元1201"> </input>
  </view>
</view>
<view class="cell default">
  <view class="default-label">设为默认地址</view>
  <view>
   <switch></switch>
  </view>
</view>
<view class="btn-box">
    <view class="submit btn" >确定添加</view>
</view>